{
  "overrides": [
    {
      "files": "**.sol",
      "options": {
        "printWidth": 110,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "preserve"
      }
    },
    {
      "files": ["**.ts", "**.js"],
      "options": {
        "printWidth": 110,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "endOfLine": "auto"
      }
    },
    {
      "files": "**.json",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    }
  ]
}
